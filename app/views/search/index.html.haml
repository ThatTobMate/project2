
.search
  -if @feeds.present? 
    %h1 Feeds
    - @feeds.each do |feed|
      %tr
        %td= feed.url
        %td= feed.title
        %td= feed.category.name
        %td= feed.last_updated
        %td= link_to 'Show', feed
        %td= link_to 'Subscribe', new_subscription_path, :class => "btn btn-primary subscribe", :data => {:id => feed.id}
        %td= link_to 'Destroy', feed, :method => :delete, :data => {:confirm => 'Are you sure?' }
%br
  -if @articles.present?
    %h1 Articles  
    - @articles.each do |article|
      .search
        .col-sm-6.col-md-4
        .thumbnail
          -if article.image.present?
            =image_tag article.image, :class => "feed_images"
          -else
            =image_tag "rss_icon.png", :class => "feed_images_default img-circle"
            .caption
              %h3= article.title
              %p= article.summary
              = link_to 'Read', article, :class => "btn btn-primary", :role => "button"
              = link_to 'Delete', article, :class => "btn btn-danger",:method => :delete, :data => { :confirm => 'Are you sure?' }
              = link_to 'Bookmark', new_articles_user_path, :class => "btn btn-info bookmark", :role => "button", :data => {:id => article.id}
  
%br

.search
  -if @categories.present?
    %h1 Categories
    - @categories.each do |category|
      %tr
        %td= category.name
        %td= link_to 'Show', category
        %td= link_to 'Edit', edit_category_path(category)
        %td= link_to 'Destroy', category, :method => :delete, :data => {:confirm => 'Are you sure?' }