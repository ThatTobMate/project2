      / /.navbar-collapse
    / Code for Login / Signup Popup
    / Modal Log in
    #login.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel1", :role => "dialog", :tabindex => "-1"}
      .modal-dialog{:style => "margin-top: 150px;"}
        .modal-content
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
            %h4#myModalLabel1.modal-title Login to Landing
          #login_details.modal-body
            %span Already have an account?
            *
            %span{:style => "font-weight:bold;"} Your Email
            %br/
            %input{:name => "login_email", :placeholder => "example@gmail.com", :type => "text"}/
            %br/
            *
            %span{:style => "font-weight:bold;"} Password
            %br/
            %input{:name => "login_password", :placeholder => "Password", :type => "password"}/
            %br/
          .modal-footer
            %input.btn.btn-success{:style => "float: left", :type => "button", :value => "Log In"}/
            %span.fp-link
              %a{:href => "#"} Forgot Password?
            %span Not a member yet?
            %span#signup-link.text-info{:style => "cursor:pointer;"} Sign Up!
        / /.modal-content
      / /.modal-dialog
    / /.modal
    / Modal Login Ends
    / Modal Sign-up Starts
    #signup.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel2", :role => "dialog", :tabindex => "-1"}
      .modal-dialog{:style => "margin-top: 100px;"}
        .modal-content
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
            %h4#myModalLabel2.modal-title Sign Up on Landing
          #signup_details.modal-body
            %span Full Name
            %input{:name => "register_name", :placeholder => "Full Name", :type => "text"}/
            *
            %span Email
            %input{:name => "register_email", :placeholder => "example@gmail.com", :type => "text"}/
            *
            %span Password
            %input{:name => "register_password", :placeholder => "Password", :type => "password"}/
            *
            %span Password Re-Type
            %input{:name => "re_register_password", :placeholder => "Re-type Password", :type => "password"}/
          .modal-footer
            %input.btn.btn-success{:style => "float: left", :type => "button", :value => "Sign Me Up"}/
            %span     Already a member?
            %span#login-link.text-info{:style => "cursor:pointer;"} Login now
        / /.modal-content
      / /.modal-dialog
    / /.modal
    / Modal Sign up ends!
    / End code for Login / Signup Popup
    #home.intro-header
      #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
        / Indicators
        %ol.carousel-indicators
          %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
          %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
        / Wrapper for slides
        .carousel-inner
