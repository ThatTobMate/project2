!!!
%html
  %head
    %title RssFeederApp
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %link{:href => "http://fonts.googleapis.com/css?family=Oleo+Script+Swash+Caps:400,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Arvo:400,700", :rel => "stylesheet", :type => "text/css"}/
    %script{:src => "http://netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"}
  %body


  

  %nav.navbar.navbar-default{:role => "navigation"}
    .container-fluid
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to '', root_path, :class => 'navbar-brand logo_side'
      / Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li
            = link_to 'Feeds |', feeds_path
          %li
            = link_to 'Subscriptions |', subscriptions_path
          %li
            = link_to 'Articles |', articles_path
          %li
            = link_to 'Bookmarks |', articles_users_path
        %p.navbar-form.navbar-left
          .form-group
            = form_tag('/search', method: :get, class: "navbar-form navbar-left" ) do
              = text_field_tag :q, nil, :class => ".form-control", :placeholder =>"Search Feeds and Articles"
              %button.btn.btn-default.search{:type => "submit"} Submit
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to 'Add a Feed', new_feed_path
      / /.navbar-collapse
    / /.container-fluid

  #wrapper
    / Sidebar
    #sidebar-wrapper
      - if user_signed_in?
        .profile
          %br/
          %p
          Welcome #{current_user.name.split[0]}
          =image_tag current_user.image, :class =>"profile_pic"
          %br/
          = link_to "Logout", destroy_user_session_path, method: :delete
          %br/
      #subslist

  

     
    


  

    = yield


