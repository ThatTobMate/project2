!!!
%html
  %head
    %title RssFeederApp
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %link{:href => "http://fonts.googleapis.com/css?family=Oleo+Script+Swash+Caps:400,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Arvo:400,700", :rel => "stylesheet", :type => "text/css"}/
  %body


  

  %nav.navbar.navbar-default{:role => "navigation"}
    .container-fluid
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to 'RSS-Reader', root_path, :class => 'navbar-brand'
      / Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li.active
            = link_to 'Feeds', feeds_path
          %li
            = link_to 'Subscriptions', subscriptions_path
          %li
            = link_to 'Articles', articles_path
          %li
            = link_to 'Bookmarks', articles_users_path
        %form.navbar-form.navbar-left{:role => "search"}
          .form-group
            = form_tag('/search', method: :get) do
              = text_field_tag :q, nil, :class => ".form-control"
              %button.btn.btn-default{:type => "submit"} Submit
        %ul.nav.navbar-nav.navbar-right
          %li
            %a{:href => "#"} Link
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Dropdown
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to 'feeds', feeds_path
              %li
                = link_to 'subscriptions', subscriptions_path
              %li
                = link_to 'articles', articles_path
              %li.divider
      / /.navbar-collapse
    / /.container-fluid

#wrapper
  / Sidebar
  #sidebar-wrapper
    .profile
      - if user_signed_in?
        %br/
        Welcome #{current_user.name.split[0]}
        =image_tag current_user.image, :class =>"profile_pic img-circle"
        %br/
        = link_to "Edit profile", edit_user_registration_path
        = link_to "Logout", destroy_user_session_path, method: :delete

    - @subscriptions_list.each do | category, subs |
      %p
        = category
      %ul
        - subs.each do | sub |
          %li
            = link_to sub.feed.title, feed_path(sub.feed_id)

  = yield

