%h1 Listing articles

= paginate @articles

%table
  %tr
    %th Title
    %th Summary
    %th Url
    %th Entry
    %th Published
    %th Image
    %th feed id
    %th
    %th
    %th

  - @articles.each do |article|
    %tr
      %td= article.title
      %td= article.summary
      %td= article.url
      %td= article.entry_id
      %td= article.published
      %td= article.image
      %td= article.feed_id
      %td= link_to 'Show', article
      %td= link_to 'Edit', edit_article_path(article)
      %td= link_to 'Destroy', article, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Article', new_article_path
